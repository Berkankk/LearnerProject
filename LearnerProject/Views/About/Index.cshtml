@model List<LearnerProject.Models.Entities.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<br />
<h3>Hakkımızda Listesi</h3>
@{
    int count = 0;
}
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Alt Açıklama 1</th>
        <th>Alt Açıklama 2</th>
        <th>İşlemler</th>
        
        
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:50px; width:50px" /></td>
            <td>@item.Title</td>
            Satır 32:
            <td>@(item.Description != null ? (item.Description.Length > 40 ? item.Description.Substring(0,40) : item.Description) : "")</td>
            Satır 33:
            <td>@(item.Item1 != null ? (item.Item1.Length > 20 ? item.Item1.Substring(0,20) : item.Item1) : "")</td>
            Satır 34:
            <td>@(item.Item2 != null ? (item.Item2.Length > 20 ? item.Item2.Substring(0,20) : item.Item2) : "")</td>


            <td>
                <a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Sil</a>
                <a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-info"><i class="fa fa-pen"></i> Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/About/AddAbout" class="btn btn-outline-success">Yeni Hakkımızd  Ekle</a>
